<% layout('layout/boilerplate2') %>
<h1 style="text-align: center; color: aliceblue; font-weight: bold; margin-bottom: 30px;">LIVE RESULTS</h1>
<% for( let cand of candidate) { %>
  <% let percent = total_votes === 0 ? 0 : (cand.votes / total_votes) * 100; %>
  <span style="font-weight: bold; color: rgb(235, 176, 210); vertical-align: middle; line-height: 5em; margin-left: 10px;"><%=cand.name%>- <%= Math.round(percent) %>%</span>
  <div class="progress" style="margin-bottom: 30px; width: 100%; height:5em;">
    <div class="progress-bar bg-warning progress-bar-striped" role="progressbar"  style="width: <%=percent%>%;" aria-valuenow="<%=percent%>" aria-valuemin="0" aria-valuemax="100">
    </div>
  </div>
<% } %>