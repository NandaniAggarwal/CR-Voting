<style>
    h1 {
        text-align: center;
        color: #000;
        margin: 40px 0 30px;
        font-family: 'Poppins', sans-serif;
    }

    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 24px; /* Equal gap between cards */
        padding: 0 30px;
        margin-bottom: 50px;
    }

    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
        background-color: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-img-top {
        width: 100%;
        height: 500px;
        object-fit: cover;
    }

    .card-body {
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
        background-color: #f9f9f9;
    }

    .card-text {
        margin: 5px 0;
        color: #333;
    }

    .bold-text {
        font-weight: 600;
        color: #111;
    }
</style>
